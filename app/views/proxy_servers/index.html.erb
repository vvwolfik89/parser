<h1 class="h2">Listing Proxy Servers</h1>
<%= link_to "Add server", new_proxy_server_path, class: "btn btn-sm btn-outline-secondary" %>
<% unless @proxy_servers.empty? %>
  <% @proxy_servers.each do |proxy_server| %>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <div class="btn-toolbar mb-2 mb-md-0">
        <%= link_to proxy_server_path(proxy_server) do %>
          <h4><%= proxy_server.server %>:<%= proxy_server.port %></h4>
        <% end %>
        <div class="btn-group me-2">
          <%= link_to 'Edit', proxy_server_path(proxy_server), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Show', proxy_server_path(proxy_server), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>